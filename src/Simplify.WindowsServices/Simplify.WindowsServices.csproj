<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net462</TargetFrameworks>
		<Authors>Alexander Krylkov</Authors>
		<Product>Simplify</Product>
		<Description>Windows services framework with DI</Description>
		<Copyright>Licensed under LGPL</Copyright>
		<Version>2.8</Version>
		<PackageProjectUrl>https://github.com/i4004/Simplify/wiki/Simplify.WindowsServices</PackageProjectUrl>
		<PackageIconUrl>https://raw.githubusercontent.com/i4004/Simplify/master/Images/Icon.png</PackageIconUrl>
		<RepositoryUrl>https://github.com/i4004/Simplify/tree/master/src/Simplify.WindowsServices</RepositoryUrl>
		<RepositoryType>GIT</RepositoryType>
		<PackageTags>.NET windows-service DI</PackageTags>
		<PackageReleaseNotes>
			New
			* IConfiguration (appsettings.json) support
			Updates
			* Upgrade to .NET Framework 4.6.2
			Fixes
			* CleanupOnTaskFinish/MaximumParallelTasksCount properties not assigning on non empty CrontabExpression bug fix
		</PackageReleaseNotes>
		<OutputPath>bin\Any CPU\$(Configuration)\</OutputPath>
		<DocumentationFile>bin\Any CPU\$(Configuration)\$(TargetFramework)\Simplify.WindowsServices.xml</DocumentationFile>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="ncrontab" Version="3.3.0" />
		<PackageReference Include="Simplify.DI" Version="2.0.1" />
		<PackageReference Include="Simplify.System" Version="1.0.1" />
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="2.2.0" />
		<Reference Include="System.Configuration" />
		<Reference Include="System.Configuration.Install" />
		<Reference Include="System.ServiceProcess" />
	</ItemGroup>
</Project>